@using FinanceDomain
@model PaymentType

    <div class="card">
        <div class="card-header">
            <h3>@Model.LongDescription</h3>
        </div>
        <div class="card-body">
            <span>@Model.Description</span>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a class="btn btn-primary" asp-page="./Detail" asp-route-paymentTypeId="@Model.Id">
                    Detail
                </a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-paymentTypeId="@Model.Id">
                    Edit
                </a>
                <a class="btn btn-primary" asp-page="./Delete" asp-route-paymentTypeId="@Model.Id">
                    Delete
                </a>
            </div>
        </div>
    </div>